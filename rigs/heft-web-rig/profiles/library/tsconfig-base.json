{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "@rushstack/heft-web-rig/profiles/app/tsconfig-base.json",
  "compilerOptions": {
    "outDir": "../../../../../lib",
    "rootDir": "../../../../../src",
    "rootDirs": [
      "../../../../../src",
      "../../../../../temp/sass-ts"
    ],
    "typeRoots": [
      "../../../../../node_modules/@types",
      // "../../node_modules/@types"
